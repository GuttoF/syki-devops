<MudStack Row="true" Class="mb-2">
    <MudItem xs="5">
        <MudSelect
            Dense="true"
            Margin="Margin.Dense"
            Class="py-0 my-0"
            Variant="Variant.Outlined"
            T="Day?"
            @bind-Value="@Data.Day"
            Label="Day"
            Required="true"
            RequiredError="Informe!"
            AdornmentColor="Color.Primary"
        >
            @foreach (Day? dia in Enum.GetValues<Day>())
            {
                <MudSelectItem Value="@dia">@dia.GetDescription()</MudSelectItem>
            }
        </MudSelect>
    </MudItem>
    <MudItem xs="3">
        <MudSelect
            Dense="true"
            Margin="Margin.Dense"
            Class="py-0 my-0"
            Variant="Variant.Outlined"
            T="Hora?"
            @bind-Value="@Data.Start"
            Label="InÃ­cio"
            Required="true"
            RequiredError="Informe!"
            AdornmentColor="Color.Primary"
        >
            @foreach (Hora? hora in Enum.GetValues<Hora>())
            {
                <MudSelectItem Value="@hora">@hora.GetDescription()</MudSelectItem>
            }
        </MudSelect>
    </MudItem>
    <MudItem xs="3">
        <MudSelect
            Dense="true"
            Margin="Margin.Dense"
            Class="py-0 my-0"
            Variant="Variant.Outlined"
            T="Hora?"
            @bind-Value="@Data.End"
            Label="Fim"
            Required="true"
            RequiredError="Informe!"
            AdornmentColor="Color.Primary"
        >
            @foreach (Hora? hora in Enum.GetValues<Hora>())
            {
                if (Data.Start == null || hora <= Data.Start) continue;
                <MudSelectItem Value="@hora">@hora.GetDescription()</MudSelectItem>
            }
        </MudSelect>
    </MudItem>
    <MudItem xs="1">
        <MudIconButton Icon="@Icons.Material.Filled.Delete" Size="Size.Medium" OnClick="@HandleDeleteClick" />
    </MudItem>
</MudStack>

@code
{
    [Parameter]
    public HorarioInFillable Data { get; set; }

    [Parameter]
    public EventCallback<Guid> OnDeleteClick { get; set; }

    async Task HandleDeleteClick()
    {
        await OnDeleteClick.InvokeAsync(Data.Id);
    }
}
