<MudButton
    Class="mr-4"
    OnClick="OnClick"
    Variant="Variant.Filled"
    Style="@($"color: white; background: {Colors.Green.Default};")"
>
    @Text
</MudButton>

@code
{
    [Parameter]
    public string Text { get; set; } = "Salvar";

    [Parameter]
    public EventCallback<MouseEventArgs> OnClick { get; set; }
}
