@page "/demo"

<PageTitle>Demo</PageTitle>

<MudContainer Class="mt-16 mb-8" Style="width: 460px">
    <MudOverlay @bind-Visible="@_loading" LightBackground="true" Absolute="false">
        <MudProgressCircular Color="Color.Info" Indeterminate="true" Size="Size.Large" />
    </MudOverlay>
    <MudForm @ref="_form">
        <MudCard Class="px-16 pt-16 pb-8">
            <MudCardMedia Image="syki_logo.png" Height="120" Class="rounded" />
            @if (_saved)
            {
                <MudAlert NoIcon="true" Class="mt-6" Severity="Severity.Success" Variant="Variant.Text" ContentAlignment="HorizontalAlignment.Center" Elevation="1">
                    <MudText>Verifique seu email e utilize o link para definir sua senha de acesso.</MudText>
                </MudAlert>
            }
            else
            {
                <MudAlert NoIcon="true" Class="mt-6" Severity="Severity.Info" Variant="Variant.Text" ContentAlignment="HorizontalAlignment.Center" Elevation="1">
                    <MudText>Cadastre seu email para ter acesso ao sistema.</MudText>
                </MudAlert>
                <MudCardContent Class="mt-4">
                    <SykiTextField Label="Email" AutoFocus="true" @bind-Value="_data.Email" OnKeyDown="Submit" />
                </MudCardContent>
                <MudCardActions>
                    <MudButton
                        Size="Size.Large"
                        OnClick="Submit"
                        Variant="Variant.Filled"
                        Color="Color.Primary"
                        Class="mx-auto mb-4 px-12 mt-4"
                    >
                        Cadastrar
                    </MudButton>
                </MudCardActions>   
            }
        </MudCard>
    </MudForm>
</MudContainer>

@inject HttpClient Http
@inject ISnackbar Snackbar

@code
{
    private bool _saved;
    private bool _loading;
    private MudForm _form;
    CreatePendingDemoIn _data = new();

    private async Task Submit()
    {
        await _form.Validate();
        if (!_form.IsValid) return;

        _loading = true;
        var response = await Http.PostAsJsonAsync("/demos", _data);
        if (response.IsSuccessStatusCode)
        {
            _saved = true;
        }
        else
        {
            var error = await response.ToError();
            Snackbar.Add(error.Message, Severity.Error);
        }
        _loading = false;
    }
}
