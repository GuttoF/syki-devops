@namespace Syki.Front.Components.Agenda

<MudPaper Width="16%" Class="pb-3">
    <MudStack AlignItems="AlignItems.Center">
        <MudText Class="mt-2" Typo="Typo.h6">@Data.Day.GetDescription()</MudText>
        <MudDivider />
        @foreach (AgendaDisciplineOut item in Data.Disciplines)
        {
            <MudPaper Class="border-solid" Style="width: 90%; border-width: 1px;">
                <MudText Align="Align.Center" Class="pa-2 pt-2" Typo="Typo.body2">@item.Name</MudText>
                <MudText Align="Align.Center" Class="px-2 pb-2" Typo="Typo.body2"><strong>@item.Start.GetDescription() - @item.End.GetDescription()</strong></MudText>
            </MudPaper>
        }
    </MudStack>
</MudPaper>

@code
{
    [Parameter]
    public AgendaDayOut Data { get; set; }
}
