<MudAlert NoIcon="true" Class="mt-0 mb-6" Severity="Severity.Info" Variant="Variant.Text" ContentAlignment="HorizontalAlignment.Center" Elevation="1">
    <MudText>Sua senha deve conter:</MudText>
    <PasswordRequeriment Ok="Validation.HasNumbers" Text="números" />
    <PasswordRequeriment Ok="Validation.HasLower" Text="letras minúsculas" />
    <PasswordRequeriment Ok="Validation.HasUpper" Text="letras maiúsculas" />
    <PasswordRequeriment Ok="Validation.HasLength" Text="16 ou mais caracteres" />
    <PasswordRequeriment Ok="Validation.HasNonAlphanumeric" Text="caracteres não alfanuméricos" />
</MudAlert>

@code
{
    [Parameter]
    public SetupDemoPasswordValidation Validation { get; set; }
    [Parameter]
    public EventCallback<SetupDemoPasswordValidation> ValidationChanged { get; set; }
}
