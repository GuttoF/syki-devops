@namespace Syki.Front.Pages.Student

@page "/student/frequency"
@attribute [Authorize(Roles = "Student")]

<MudContainer>
    <SykiPageHeader Icon="@Icons.Material.Filled.Class" Title="Frequência" />
    <MudPaper Class="mb-8 mx-4">
        <MudContainer MaxWidth="MaxWidth.Medium" Class="pt-4">
            <MudProgressLinear Color="Color.Primary" Rounded="true" Size="Size.Large" Value="10" Style="height: 24px">
                <MudText Typo="Typo.body1" Style="color: white">
                    <b>10%</b>
                </MudText>
            </MudProgressLinear>
        </MudContainer>
        <div>
            <MudChart
                ChartType="ChartType.Bar"
                ChartSeries="@Series"
                LegendPosition="Position.Top"
                XAxisLabels="@XAxisLabels"
                Width="100%"
                Height="350px"
                ChartOptions="@_options"
                
            />
        </div>
    </MudPaper>
    
</MudContainer>


@code
{
    private ChartOptions _options = new()
    {
        MaxNumYAxisTicks = 5
    };
    
    public List<ChartSeries> Series = new()
    {
        new ChartSeries() { Name = "Brasil", Data = new double[] { 100, 20, 25, 27, 46, 60, 48, 100, 15 } },
    };
    public string[] XAxisLabels = { "1", "2", "3", "4", "5", "6", "7", "8", "9" };
}
