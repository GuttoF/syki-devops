@using Syki.Front.Components.Indexes
@using Syki.Front.Features.Adm.GetAdmInsights
@using Syki.Front.Features.Student.GetStudentInsights
@using Syki.Front.Features.Teacher.GetTeacherInsights
@using Syki.Front.Features.Academic.GetAcademicInsights

@namespace Syki.Front.Pages.Cross

@page "/"

<PageTitle>Syki</PageTitle>

<AuthorizeView Roles="@UserRole.Adm.ToString()">
    <Authorized>
        <IndexAdm />
    </Authorized>
</AuthorizeView>

<AuthorizeView Roles="@UserRole.Academic.ToString()">
    <Authorized>
        <IndexAcademico />
    </Authorized>
</AuthorizeView>

<AuthorizeView Roles="@UserRole.Student.ToString()">
    <Authorized>
        <IndexAluno />
    </Authorized>
</AuthorizeView>

<AuthorizeView Roles="@UserRole.Teacher.ToString()">
    <Authorized>
        <IndexProfessor />
    </Authorized>
</AuthorizeView>

<AuthorizeView Roles="Adm, Academic, Teacher, Student">
    <NotAuthorized>
        <IndexAnonymous />
    </NotAuthorized>
</AuthorizeView>
