<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.AccountTree" Class="mr-1 mb-n1" />
            @MudDialog.Title
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudDataGrid
            Class="mb-4"
            Dense="true"
            Hover="true"
            Items="@Disciplinas.OrderBy(d => d.Periodo).ThenBy(d => d.Nome)"
        >
            <Columns>
                <PropertyColumn Property="x => x.Nome" Title="Nome" />
                <PropertyColumn Property="x => x.Periodo" Title="Período" />
                <PropertyColumn Property="x => x.Creditos" Title="Créditos" />
                <PropertyColumn Property="x => x.CargaHoraria" Title="Carga Horária" />
            </Columns>
        </MudDataGrid>
    </DialogContent>
</MudDialog>

@code
{
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public List<DisciplinaOut> Disciplinas { get; set; }
}
