<MudDialog Class="pb-2">
    <TitleContent>
        <SykiDialogTitle Text="Novo Campus" />
    </TitleContent>
    <DialogContent>
        <MudForm @ref="_form">
            <SykiTextField Label="Nome" AutoFocus="true" @bind-Value="_data.Name" OnKeyDown="Submit" />
            <SykiTextField Label="Cidade" @bind-Value="_data.City" OnKeyDown="Submit" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <DialogCancelButton OnClick="Cancel" />
        <DialogProgressCircular Loading="_loading" />
        <DialogSaveButton OnClick="Submit" />
    </DialogActions>
</MudDialog>

@inject HttpClient Http
@inject ISnackbar Snackbar

@code
{
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    private MudForm _form;
    private bool _loading;
    private CreateCampusIn _data = new();

    async Task Submit()
    {
        if (_loading) return;

        await _form.Validate();
        if (!_form.IsValid) return;

        _loading = true;
        var response = await Http.PostAsJsonAsync("/campi", _data);
        if (response.IsSuccessStatusCode)
        {
            MudDialog.Close(DialogResult.Ok(true));
            Snackbar.Add("Campus cadastrado com sucesso!", Severity.Success);
        }
        else
        {
            var error = await response.ToError();
            Snackbar.Add(error.Message, Severity.Error);
        }
        _loading = false;
    }

    void Cancel() => MudDialog.Cancel();
}
