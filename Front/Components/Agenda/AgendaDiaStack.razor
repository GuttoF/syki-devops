<MudPaper Width="16%" Class="pb-3">
    <MudStack AlignItems="AlignItems.Center">
        <MudText Class="mt-2" Typo="Typo.h6">@Data.Dia.GetDescription()</MudText>
        <MudDivider />
        @foreach (AgendaDisciplinaOut item in Data.Disciplinas)
        {
            <MudPaper Style="width: 90%">
                <MudText Class="pa-2" Typo="Typo.body2">@item.Nome</MudText>
                <MudText Align="Align.Center" Class="px-2 pb-2" Typo="Typo.body2"><strong>@item.Start.GetDescription() - @item.End.GetDescription()</strong></MudText>
            </MudPaper>
        }
    </MudStack>
</MudPaper>

@code
{
    [Parameter]
    public AgendaDiaOut Data { get; set; }
}
