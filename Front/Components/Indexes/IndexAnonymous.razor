@namespace Syki.Front.Components.Indexes

<MudContainer MaxWidth="MaxWidth.Large">
    <MudGrid Class="mt-4 mb-6">
        <MudItem xs="4" sm="4" md="4">
            <MudText Typo="Typo.h2" Class="mb-8">
                <strong>Gerencie sua instituição de ensino com maestria</strong>
            </MudText>
            <MudText Typo="Typo.h5" Class="mb-8">
                Acadêmico, financeiro, secretaria, professores e alunos: tudo integrado de maneira fácil e intuitiva.
            </MudText>
            <MudButton
                Class="px-8"
                EndIcon="@Icons.Material.Filled.ArrowForward"
                IconSize="Size.Large"
                Variant="Variant.Filled"
                Style="height: 60px;"
                Color="Color.Primary"
                Href="/register"
            >
                <MudText Typo="Typo.h6">
                    Experimente agora
                </MudText>
            </MudButton>
        </MudItem>

        <MudItem xs="8" sm="8" md="8">
            <MudPaper Class="pa-4" Elevation="3">
                @if (IsDarkTheme)
                {
                    <img src="syki_home_gif_dark.gif" width="100%">
                }
                else
                {
                    <img src="syki_home_gif_light.gif" width="100%">
                }
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>

@code
{
    [CascadingParameter(Name = "IsDarkTheme")]
    public bool IsDarkTheme { get; set; }
}
