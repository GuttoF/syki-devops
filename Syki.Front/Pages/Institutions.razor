@using Front.Components.Custom

@page "/institutions"
@attribute [Authorize(Roles = "Adm")]

<PageTitle>Instituições</PageTitle>

<MudContainer>
    <SykiPageHeader Icon="@Icons.Material.Filled.School" Title="Instituições" />

    <MudAlert Class="mt-4 mb-4 mx-6 pl-6" Severity="Severity.Normal" Variant="Variant.Text" Elevation="1">
        <MudText>Uma instituição pode conter vários campus e ofertar vários cursos.</MudText>
    </MudAlert>

    <MudContainer Class="mb-8">
        <MudDataGrid Class="pa-4" Items="@_institutions" QuickFilter="@_quickFilter" Hover="true" Loading="@_loading" Dense="true" RowsPerPage="10">
            <ToolBarContent>
                <SykiDataGridSearchTextField @bind-Value="@_searchString" Placeholder="Busque por nome" />
            </ToolBarContent>
            <Columns>
                <PropertyColumn Property="x => x.Id" Title="Id" />
                <PropertyColumn Property="x => x.Name" Title="Nome" />
            </Columns>

            <NoRecordsContent>
                @(GetNotFoundMessage())
            </NoRecordsContent>

            <PagerContent>
                <SykiDataGridPager T="InstitutionOut" />
            </PagerContent>
        </MudDataGrid>
    </MudContainer>
</MudContainer>

@inject HttpClient Http
@inject IDialogService DialogService

@code
{
    private bool _loading;
    private string _searchString;
    private List<InstitutionOut> _institutions = [];

    protected override async Task OnInitializedAsync()
    {
        _loading = true;
        _institutions = await Http.GetFromJsonAsync<List<InstitutionOut>>("/institutions") ?? [];
        _loading = false;
    }

    private Func<InstitutionOut, bool> _quickFilter => x => _searchString.IsIn(x.Name);

    private string GetNotFoundMessage()
    {
        return (_searchString.IsEmpty()) ? "Não existem instituições cadastradas ainda." : "Nenhuma instituição encontrada.";
    }
}
