<MudDialog Class="pb-2">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Outlined.Edit" Class="mr-1 mb-n1" />
            Editar Campus
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="_form">
            <MudTextField
                OnKeyDown="HandleOnKeyDown"
                OnlyValidateIfDirty="true"
                Immediate="true"
                Margin="Margin.Dense"
                Variant="Variant.Outlined"
                Class="mb-4"
                AutoFocus="true"
                @bind-Value="Campus.Nome"
                T="String"
                Label="Nome"
                Required="true"
                RequiredError="Informe o nome do campus!"
            />
            <MudTextField
                OnKeyDown="HandleOnKeyDown"
                OnlyValidateIfDirty="true"
                Immediate="true"
                Margin="Margin.Dense"
                Variant="Variant.Outlined"
                Class="mb-2"
                @bind-Value="Campus.Cidade"
                T="String"
                Label="Cidade"
                Required="true"
                RequiredError="Informe a cidade onde o campus se encontra!"
            />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <DialogCancelButton OnClick="Cancel" />
        <DialogProgressCircular Loading="_loading" />
        <DialogSaveButton OnClick="Submit" />
    </DialogActions>
</MudDialog>

@inject HttpClient Http
@inject ISnackbar Snackbar

@code
{
    private MudForm _form;
    private bool _loading = false;

    [Parameter]
    public CampusOut Campus { get; set; }

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    async Task HandleOnKeyDown(KeyboardEventArgs args)
    {
        if (args.IsEnter())
        {
            await Submit();
        }
    }

    async Task Submit()
    {
        if (_loading) return;

        await _form.Validate();
        if (!_form.IsValid) return;

        _loading = true;
        await Http.PutAsJsonAsync("/campi", Campus);
        _loading = false;

        MudDialog.Close(DialogResult.Ok(true));

        Snackbar.Add("Campus editado com sucesso!", Severity.Success);
    }

    void Cancel() => MudDialog.Cancel();
}
