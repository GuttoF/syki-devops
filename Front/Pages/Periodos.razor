@page "/periodos"
@attribute [Authorize(Roles = "Academico")]

<PageTitle>Períodos</PageTitle>

<MudContainer>
    <SykiPageHeader Icon="@Icons.Material.Filled.CalendarMonth" Title="Períodos" ButtonText="Novo Período" OnClick="OpenDialog"/>

    <MudAlert Class="mt-4 mb-4 mx-6 pl-6" Severity="Severity.Normal" Variant="Variant.Text">
        <MudText>Utilize os períodos para organizar as informações durante o ano letivo.</MudText>
    </MudAlert>

    <MudContainer Class="mb-8">
        <MudDataGrid Class="pa-4" Items="@_periodos" QuickFilter="@_quickFilter" Hover="true" Loading="_loading" Dense="true" RowsPerPage="10">
            <ToolBarContent>
                <MudSpacer />
                <MudSpacer />
                <MudTextField
                    Margin="Margin.Dense"
                    Variant="Variant.Outlined"
                    @bind-Value="_searchString"
                    Placeholder="Busque por ano"
                    Adornment="Adornment.Start"
                    Immediate="true"
                    AdornmentIcon="@Icons.Material.Filled.Search"
                    IconSize="Size.Medium"
                    Class="mt-0"
                />
            </ToolBarContent>
            <Columns>
                <PropertyColumn Property="x => x.Id" Title="Id" />
                <PropertyColumn Property="x => x.Start" Title="Início" />
                <PropertyColumn Property="x => x.End" Title="Fim" />
            </Columns>

            <NoRecordsContent>
                Não existem períodos cadastrados ainda.
            </NoRecordsContent>

            <PagerContent>
                <MudDataGridPager T="PeriodoOut" RowsPerPageString="Linhas por página:" InfoFormat="{first_item}-{last_item} de {all_items}" />
            </PagerContent>
        </MudDataGrid>
    </MudContainer>
</MudContainer>

@inject HttpClient Http
@inject IDialogService DialogService

@code
{
    private bool _loading;
    private string _searchString;
    private List<PeriodoOut> _periodos = [];

    protected override async Task OnInitializedAsync()
    {
        _loading = true;
        _periodos = await Http.GetFromJsonAsync<List<PeriodoOut>>("/periodos") ?? [];
        _loading = false;
    }

    private Func<PeriodoOut, bool> _quickFilter => x => _searchString.IsIn(x.Id);

    private async Task OpenDialog()
    {
        var options = new DialogOptions {
            MaxWidth = MaxWidth.Small,
            FullWidth = true
        };
        var dialog = await DialogService.ShowAsync<NewPeriodoDialog>("", options);

        var result = await dialog.Result;

        if (result.Canceled) return;
        
        await OnInitializedAsync();
    }
}
