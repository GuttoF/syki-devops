<MudDialog Class="pb-2">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-1 mb-n1" />
            Nova Faculdade
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="_form">
            <MudTextField
                OnKeyDown="HandleOnKeyDown"
                OnlyValidateIfDirty="true"
                Immediate="true"
                Margin="Margin.Dense"
                Variant="Variant.Outlined"
                Class="mb-2"
                AutoFocus="true"
                @bind-Value="data.Nome"
                T="String"
                Label="Nome"
                Required="true"
                RequiredError="Informe o nome da faculdade!"
            />
            <MudCheckBox
                T="bool"
                @bind-Checked="data.SeedData"
                Label="Fazer o seed do banco com dados de teste"
                Color="Color.Primary"
            />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <DialogCancelButton OnClick="Cancel" />
        <DialogProgressCircular Loading="_loading" />
        <DialogSaveButton OnClick="Submit" />
    </DialogActions>
</MudDialog>

@inject HttpClient Http
@inject ISnackbar Snackbar

@code
{
    private MudForm _form;
    private bool _loading = false;

    FaculdadeIn data = new();

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    async Task Submit()
    {
        if (_loading) return;

        await _form.Validate();
        if (!_form.IsValid) return;

        _loading = true;
        await Http.PostAsJsonAsync("/faculdades", data);
        _loading = false;

        MudDialog.Close(DialogResult.Ok(true));

        Snackbar.Add("Faculdade cadastrada com sucesso!", Severity.Success);
    }

    void Cancel() => MudDialog.Cancel();

    private async Task HandleOnKeyDown(KeyboardEventArgs args)
    {
        if (args.IsEnter())
        {
            await Submit();
        }
    }
}
