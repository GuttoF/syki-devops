<MudDialog Class="pb-2">
    <TitleContent>
        <SykiDialogTitle Text="Novo Campus" />
    </TitleContent>
    <DialogContent>
        <MudForm @ref="@_form">
            <SykiTextField Label="Nome" AutoFocus="true" @bind-Value="@_name" OnKeyDown="@Submit" />
            <SykiTextField Label="Cidade" @bind-Value="@_city" OnKeyDown="@Submit" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <DialogCancelButton OnClick="@Cancel" />
        <DialogProgressCircular Loading="@_loading" />
        <DialogSaveButton OnClick="@Submit" />
    </DialogActions>
</MudDialog>

@inject ISnackbar Snackbar
@inject CreateCampusClient Client

@code
{
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    private MudForm _form;
    private bool _loading;
    private string _name;
    private string _city;

    async Task Submit()
    {
        if (_loading) return;

        await _form.Validate();
        if (!_form.IsValid) return;

        _loading = true;
        var response = await Client.Create(_name, _city);
        if (response.IsSuccessStatusCode)
        {
            MudDialog.Close(DialogResult.Ok(true));
            Snackbar.Add("Campus cadastrado com sucesso!", Severity.Success);
        }
        else
        {
            var error = await response.ToError();
            Snackbar.Add(error.Message, Severity.Error);
        }
        _loading = false;
    }

    void Cancel() => MudDialog.Cancel();
}
