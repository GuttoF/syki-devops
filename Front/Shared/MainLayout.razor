@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="false" />
<MudDialogProvider CloseOnEscapeKey="true" CloseButton="true"/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="1" Dense="true">
        <MudText Typo="Typo.h5" Class="ml-3">Syki</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.MudBlazor" Color="Color.Inherit" Href="/" Target="_self" />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Href="/" Target="_self" />
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Href="/" Target="_self" />
    </MudAppBar>
    <MudDrawer Open="true" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <CascadingValue Value="@AppState">
            @Body
        </CascadingValue>
    </MudMainContent>
</MudLayout>

@code {
    public AppState AppState = new AppState();
}
