@page "/login"

<PageTitle>Login</PageTitle>

<style>body { background-color: rgba(235,235,235,1); }</style>

<MudContainer Class="mt-16 mb-8" Style="width: 460px">
    <MudForm @ref="_form">
        <MudOverlay @bind-Visible="@_loading" LightBackground="true" Absolute="false">
            <MudProgressCircular Color="Color.Primary" Indeterminate="true" Size="Size.Large" />
        </MudOverlay>
        <MudCard Class="px-16 pt-16 pb-8">
            <MudCardMedia Image="syki_logo.png" Height="120" Class="rounded" />
            <MudCardContent Class="mt-4">
                <MudTextField
                    Margin="Margin.Dense"
                    AutoFocus="true"
                    Label="Email"
                    Class="mt-3"
                    OnlyValidateIfDirty="true"
                    @bind-Value="_model.Email"
                    Variant="Variant.Outlined"
                    Required="true"
                    RequiredError="Informe o email!"
                />
                <MudTextField
                    Margin="Margin.Dense"
                    Label="Password"
                    Class="mt-3"
                    OnlyValidateIfDirty="true"
                    @bind-Value="_model.Password"
                    InputType="InputType.Password"
                    Variant="Variant.Outlined"
                    Required="true"
                    RequiredError="Informe a senha!"
                />
            </MudCardContent>
            <MudCardActions>
                <MudButton
                    Size="Size.Large"
                    OnClick="OnLoginClick"
                    Variant="Variant.Filled"
                    Color="Color.Primary"
                    Class="mx-auto mb-4 px-12"
                >
                    Login
                </MudButton>
            </MudCardActions>
        </MudCard>
    </MudForm>
</MudContainer>

@inject ISnackbar Snackbar
@inject AuthService AuthService
@inject NavigationManager Nav

@code {
    private bool _loading;

    private MudForm _form;

    LoginIn _model = new();

    private async Task OnLoginClick()
    {
        await _form.Validate();
        if (!_form.IsValid) return;

        _loading = true;
        var success = await AuthService.Login(_model.Email, _model.Password);

        if (success)
        {
            Nav.NavigateTo("/");
        }
        else
        {
            Snackbar.Add("Erro!", Severity.Error);
        }

        _loading = false;
    }
}
