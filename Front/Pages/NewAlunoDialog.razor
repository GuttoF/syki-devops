<MudDialog>
    <DialogContent>
        <MudForm>
            <MudTextField AutoFocus="true" @bind-Value="data.Nome" T="String" Label="Nome" Required="true" RequiredError="Informe o nome do aluno!" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancelar</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Salvar</MudButton>
    </DialogActions>
</MudDialog>

@using Syki.Dtos
@inject HttpClient Http
@inject ISnackbar Snackbar

@code {
    private AlunoIn data = new();

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    async Task Submit()
    {
        await Http.PostAsJsonAsync("/alunos", data);

        MudDialog.Close(DialogResult.Ok(true));

        Snackbar.Add("Aluno cadastrado com sucesso!", Severity.Success);
    }

    void Cancel() => MudDialog.Cancel();
}
