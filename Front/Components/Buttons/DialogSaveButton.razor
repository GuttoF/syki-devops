@namespace Syki.Front.Components.Buttons

<MudButton
    Class="@Class"
    OnClick="@OnClick"
    Variant="Variant.Filled"
    Disabled="@Disabled"
    Style="@($"color: white; background: {Colors.Green.Default};")"
>
    @Text
</MudButton>

@code
{
    [Parameter]
    public string Text { get; set; } = "Salvar";

    [Parameter]
    public string Class { get; set; } = "mr-4";
    
    [Parameter]
    public EventCallback<MouseEventArgs> OnClick { get; set; }
    
    [Parameter]
    public bool Disabled { get; set; }
    [Parameter]
    public EventCallback<bool> DisabledChanged { get; set; }
}
