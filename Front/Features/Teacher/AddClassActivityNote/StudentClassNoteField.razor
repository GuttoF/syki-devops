@namespace Syki.Front.Features.Teacher.AddClassActivityNote
        
<MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.Center" Spacing="0" Class="mb-3">
    <MudItem xs="4">
        <MudText>@(GetLabel())</MudText>
    </MudItem>
    <MudItem xs="2">
        <MudIcon Icon="@Icons.Material.Filled.ArrowRightAlt" />
    </MudItem>
    <MudItem xs="6">
        <MudNumericField
            T="decimal"
            @bind-Value="@Data.Note"
            Max="10.00M"
            MaxLength="4"
            Min="0"
            Format="N2"
            HideSpinButtons="true"
            Variant="Variant.Outlined"
            Margin="Margin.Dense"
        />
    </MudItem>
</MudStack>

@code
{
    [Parameter]
    public StudentClassNoteOut Data { get; set; }
    
    [Parameter]
    public EventCallback<StudentClassNoteOut> DataChanged { get; set; }
    
    private string GetLabel()
    {
        return $"Nota {Data.Type}";
    }
}
