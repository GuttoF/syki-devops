<MudText Class="ml-4 d-flex align-center flex-grow-1 gap-2">
    <MudIcon Icon="@(GetIcon())" Size="Size.Small" />
    @Text
</MudText>

@code
{
    [Parameter]
    public string Text { get; set; }

    [Parameter]
    public bool Ok { get; set; }

    private string GetIcon()
    {
        return Ok ? @Icons.Material.Filled.CheckBox : @Icons.Material.Filled.CheckBoxOutlineBlank;
    }
}
