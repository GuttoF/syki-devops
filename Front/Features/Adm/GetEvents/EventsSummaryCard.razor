@namespace Syki.Front.Features.Adm.GetEvents

<MudItem xs="12" sm="6" md="3" lg="3">
    <MudPaper Class="px-4 py-4">
        <MudStack Row="true" AlignItems="AlignItems.Center">
            <MudIcon Icon="@Icon" Size="MudBlazor.Size.Large" Color="@Color" />
            <MudStack Spacing="0">
                <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
                    @if (Loading)
                    {
                        <MudText Typo="Typo.h5"><b>...</b></MudText>
                    }
                    else
                    {
                        <MudText Typo="Typo.h5"><b>@Value.ToThousandSeparated()</b></MudText>
                    }
                </MudStack>
                <MudText Typo="Typo.body1">@Text</MudText>
            </MudStack>
        </MudStack>
    </MudPaper>
</MudItem>

@code
{
    [Parameter]
    public bool Loading { get; set; }

    [Parameter]
    public MudBlazor.Color Color { get; set; }

    [Parameter]
    public string Icon { get; set; }

    [Parameter]
    public int Value { get; set; }

    [Parameter]
    public string Text { get; set; }
}
