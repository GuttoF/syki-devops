@namespace Syki.Front.Pages.Cross

@page "/register"

<PageTitle>Cadastro</PageTitle>

<MudContainer Class="mt-8 mb-8" MaxWidth="MaxWidth.ExtraSmall">
    <MudOverlay @bind-Visible="@_loading" LightBackground="true" Absolute="false">
        <MudProgressCircular Color="Color.Info" Indeterminate="true" Size="Size.Large" />
    </MudOverlay>
    <MudForm @ref="@_form">
        <MudCard Class="px-10 pt-2 pb-8">
            <MudImage Src="logo_512x512.png" Alt="Syki" Elevation="25" Class="rounded-lg ma-8"/>
            @if (_saved)
            {
                <MudAlert NoIcon="true" Severity="Severity.Success" Variant="Variant.Text" ContentAlignment="HorizontalAlignment.Center" Elevation="1">
                    <MudText>Verifique seu email e utilize o link para definir sua senha de acesso.</MudText>
                </MudAlert>
            }
            else
            {
                <MudAlert NoIcon="true" Severity="Severity.Info" Variant="Variant.Text" ContentAlignment="HorizontalAlignment.Center" Elevation="1">
                    <MudText Align="Align.Center">Cadastre seu email para ter acesso ao sistema.</MudText>
                </MudAlert>
                <MudCardContent Class="px-0 pt-12 pb-0">
                    <SykiTextField Label="Email" AutoFocus="true" @bind-Value="@_email" />
                </MudCardContent>
                <MudCardActions>
                    <MudButton
                        OnClick="@Submit"
                        Size="Size.Large"
                        Color="Color.Primary"
                        Variant="Variant.Filled"
                        Class="mx-auto mb-4 px-12 my-0">
                        Cadastrar
                    </MudButton>
                </MudCardActions>
            }
        </MudCard>
    </MudForm>
</MudContainer>

@inject ISnackbar Snackbar
@inject CreatePendingUserRegisterClient Client

@code
{
    private bool _saved;
    private bool _loading;
    private MudForm _form;
    private string _email;

    private async Task Submit()
    {
        await _form.Validate();
        if (!_form.IsValid) return;

        _loading = true;
        var response = await Client.Create(_email);
        if (response.IsSuccess())
        {
            _saved = true;
        }
        else
        {
            Snackbar.Add(response.GetError().Message, Severity.Error);
        }
        _loading = false;
    }
}
