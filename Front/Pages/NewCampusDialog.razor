<MudDialog Class="pb-2">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-1 mb-n1" />
            Novo Campus
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="_form">
            <MudTextField
                OnKeyDown="HandleOnKeyDown"
                OnlyValidateIfDirty="true"
                Immediate="true"
                Margin="Margin.Dense"
                Variant="Variant.Outlined"
                Class="mb-4"
                AutoFocus="true"
                @bind-Value="data.Nome"
                T="String"
                Label="Nome"
                Required="true"
                RequiredError="Informe o nome do campus!"
            />
            <MudTextField
                OnKeyDown="HandleOnKeyDown"
                OnlyValidateIfDirty="true"
                Immediate="true"
                Margin="Margin.Dense"
                Variant="Variant.Outlined"
                Class="mb-2"
                @bind-Value="data.Cidade"
                T="String"
                Label="Cidade"
                Required="true"
                RequiredError="Informe a cidade onde o campus se encontra!"
            />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <DialogCancelButton OnClick="Cancel" />
        <MudSpacer />
        <DialogSaveButton OnClick="Submit" />
    </DialogActions>
</MudDialog>

@using Syki.Dtos
@inject HttpClient Http
@inject ISnackbar Snackbar

@code {
    private MudForm _form;

    private CampusIn data = new();

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    async Task HandleOnKeyDown(KeyboardEventArgs args)
    {
        if (args.Key == "Enter")
        {
            await Submit();
        }
    }

    async Task Submit()
    {
        await _form.Validate();
        if (!_form.IsValid) return;

        await Http.PostAsJsonAsync("/campi", data);

        MudDialog.Close(DialogResult.Ok(true));

        Snackbar.Add("Campus cadastrado com sucesso!", Severity.Success);
    }

    void Cancel() => MudDialog.Cancel();
}
