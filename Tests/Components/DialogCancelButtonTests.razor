@using Syki.Front.Components.Buttons

@inherits BunitTestContext

@code
{
    [Test]
    public void Should_renders_the_default_text()
    {
        // Arrange / Act
        var cut = Render(@<DialogCancelButton />);

        // Assert
        cut.Find("span").TextContent.MarkupMatches("Cancelar");
    }

    [Test]
    public void Should_call_on_click_method()
    {
        // Arrange
        var clicked = false;
        Action<MouseEventArgs> onClick = _ => { clicked = true; };
        
        var cut = Render(@<DialogCancelButton OnClick=@onClick />);

        // Act
        cut.Find("button").Click();

        // Assert
        clicked.Should().BeTrue();
    }
}
