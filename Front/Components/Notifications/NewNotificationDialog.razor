<MudDialog Class="pb-2">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-1 mb-n1" />
            Nova Notificação
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="_form">
            <MudTextField
                OnKeyDown="HandleOnKeyDown"
                OnlyValidateIfDirty="true"
                Immediate="true"
                Margin="Margin.Dense"
                Variant="Variant.Outlined"
                Class="mb-4"
                AutoFocus="true"
                @bind-Value="data.Title"
                T="String"
                Label="Título"
                Required="true"
                RequiredError="Informe o título!"
            />
            <MudTextField
                OnKeyDown="HandleOnKeyDown"
                OnlyValidateIfDirty="true"
                Immediate="true"
                Margin="Margin.Dense"
                Variant="Variant.Outlined"
                Class="mb-2"
                @bind-Value="data.Description"
                T="String"
                Label="Descrição"
                Required="true"
                RequiredError="Informe a descrição!"
            />
            <MudSelect
                Dense="true"
                Margin="Margin.Dense"
                Variant="Variant.Outlined"
                Class="mb-4"
                @bind-Value="data.UsersGroup"
                Label="Usuários"
                Required="true"
                RequiredError="Informe quais usuários serão notificados!"
                AdornmentColor="Color.Primary"
            >
                <MudSelectItem Value="@("Alunos")">Alunos</MudSelectItem>
                <MudSelectItem Value="@("Professores")">Professores</MudSelectItem>
            </MudSelect>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <DialogCancelButton OnClick="Cancel" />
        <DialogProgressCircular Loading="_loading" />
        <DialogSaveButton OnClick="Submit" />
    </DialogActions>
</MudDialog>

@inject HttpClient Http
@inject ISnackbar Snackbar

@code
{
    private MudForm _form;
    private bool _loading = false;
    private NotificationIn data = new();

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    async Task HandleOnKeyDown(KeyboardEventArgs args)
    {
        if (args.IsEnter())
        {
            await Submit();
        }
    }

    async Task Submit()
    {
        if (_loading) return;

        await _form.Validate();
        if (!_form.IsValid) return;

        _loading = true;
        await Http.PostAsJsonAsync("/notifications", data);
        _loading = false;

        MudDialog.Close(DialogResult.Ok(true));

        Snackbar.Add("Notificação cadastrada com sucesso!", Severity.Success);
    }

    void Cancel() => MudDialog.Cancel();
}
