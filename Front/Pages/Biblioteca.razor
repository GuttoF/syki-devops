@page "/biblioteca"
@attribute [Authorize(Roles = "Academico")]

<PageTitle>Biblioteca</PageTitle>

<MudContainer>
    <SykiPageHeader Icon="@Icons.Material.Filled.LibraryBooks" Title="Biblioteca" ButtonText="Novo Livro" OnClick="OpenDialog" />
    <SykiPageAlert Text="Um livro precisa necessariamente estar vinculado à um campus." />
    <MudContainer Class="mb-8">
        <MudDataGrid Class="pa-4" Items="@_books" QuickFilter="@_quickFilter" Hover="true" Loading="_loading" Dense="true" RowsPerPage="10">
            <ToolBarContent>
                <SykiDataGridSearchTextField @bind-Value="_searchString" Placeholder="Busque por título" />
            </ToolBarContent>
            <Columns>
                <PropertyColumn Property="x => x.Id" Title="Id" />
                <PropertyColumn Property="x => x.Title" Title="Título" />
            </Columns>
            <NoRecordsContent>
                @(GetNotFoundMessage())
            </NoRecordsContent>
            <PagerContent>
                <SykiDataGridPager T="BookOut" />
            </PagerContent>
        </MudDataGrid>
    </MudContainer>
</MudContainer>

@inject HttpClient Http
@inject IDialogService DialogService

@code
{
    private bool _loading;
    private string _searchString;
    private List<BookOut> _books = [];

    protected override async Task OnInitializedAsync()
    {
        _loading = true;
        _books = await Http.GetFromJsonAsync<List<BookOut>>("/books") ?? [];
        _loading = false;
    }

    private Func<BookOut, bool> _quickFilter => x => _searchString.IsIn(x.Title);

    private async Task OpenDialog()
    {
        var options = new DialogOptions {
            MaxWidth = MaxWidth.Small,
            FullWidth = true
        };
        var dialog = await DialogService.ShowAsync<NewBookDialog>("", options);

        var result = await dialog.Result;
        if (result.Canceled) return;
        
        await OnInitializedAsync();
    }

    private string GetNotFoundMessage()
    {
        return (_searchString.IsEmpty()) ? "Não existem livros cadastrados ainda." : "Nenhum livro encontrado.";
    }
}
