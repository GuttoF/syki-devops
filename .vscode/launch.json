{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Back/bin/Debug/net7.0/Back.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Back",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "FRONT",
            "type": "blazorwasm",
            "request": "launch",
            "cwd": "${workspaceFolder}/Front"
        }
    ]
}
