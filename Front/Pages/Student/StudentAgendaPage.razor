@using Syki.Front.Components.Agenda

@namespace Syki.Front.Pages.Student

@page "/student/agenda"
@attribute [Authorize(Roles = "Student")]

<MudContainer>
    <SykiPageHeader Icon="@Icons.Material.Filled.CalendarMonth" Title="Agenda" />
    <CascadingValue Name="Days" Value="@Days">
        <WeeklyAgenda Class="px-4 mb-4"/>
    </CascadingValue>
</MudContainer>

@inject GetStudentAgendaClient Client

@code
{
    private List<AgendaDayOut> Days = [];

    protected override async Task OnInitializedAsync()
    {
        Days = await Client.Get();
    }
}
