<MudDialog>
    <DialogContent>
        <MudDataGrid Items="@Disciplinas" Hover="true">
            <Columns>
                <PropertyColumn Property="x => x.Nome" Title="Nome" />
                <PropertyColumn Property="x => x.Periodo" Title="Período" />
                <PropertyColumn Property="x => x.Creditos" Title="Créditos" />
                <PropertyColumn Property="x => x.CargaHoraria" Title="Carga Horária" />
            </Columns>
        </MudDataGrid>
    </DialogContent>
</MudDialog>

@using Syki.Dtos

@code {
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public List<DisciplinaOut> Disciplinas { get; set; }
}
